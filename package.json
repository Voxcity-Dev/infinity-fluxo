	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"prisma/**/*.ts\" \"*.{js,ts,json,md}\"",
		"format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"prisma/**/*.ts\" \"*.{js,ts,json,md}\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"code:format": "npm run format && npm run lint",
		"code:check": "npm run format:check && npm run lint:check",
		"code:organize": "npm run code:format && npm run build",
		"seed:dev": "ts-node -r tsconfig-paths/register prisma/seed/run.ts",
		"seed:prod": "ts-node -r tsconfig-paths/register prisma/seed/run.ts",
		"reset:db": "prisma db push --force-reset && prisma db seed",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},

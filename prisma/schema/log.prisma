// LOG

model Logs {
  id         String   @id @default(uuid()) @db.Uuid
  tenant_id  String   @db.Uuid
  ticket_id  String   @db.Text
  fluxo_id   String   @db.Uuid
  etapa_id   String   @db.Uuid
  opcao_id   String?  @db.Uuid
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  opcao CondicaoRegra? @relation(fields: [opcao_id], references: [id])

  @@index([tenant_id])
  @@index([ticket_id], map: "idx_log_ticket")
  @@index([fluxo_id], map: "idx_log_fluxo")
  @@index([created_at], map: "idx_log_created")
  @@map("logs")
}
